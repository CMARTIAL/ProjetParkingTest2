@foreach (var item in Model)
{




    <div id="content" class="flex column" style="margin: 0 0 10px 0;">
        <div class="ThemeTitle" style="text-transform:uppercase">
            @Html.DisplayFor(modelItem => item.Theme)
        </div>
        <div id="event" class="flex" style="margin: 2px 0 0 0 ">
            <img src="@Url.Content(item.ImageEvenement.Path)" alt="Image" />
            <div id="descev" class="flex column flex1" style="justify-content: center; margin:10px;">
                <div id="dateduree" class="rowflex">
                    <div class="backgroundGrey">
                        @Html.DisplayFor(modelItem => item.DateEvenement)
                    </div>

                    <div class="backgroundOrange">
                        Durée : @Html.DisplayFor(modelItem => item.Duree) H
                    </div>

                </div>
                <div id="nom" style="font-size: 40px; text-transform:uppercase">
                    @Html.DisplayFor(modelItem => item.Titre)
                </div>
                <div id="desctarif" class="rowflex">
                    <div class="backgroundOrange">
                        @Html.DisplayFor(modelItem => item.Description)
                    </div>
                    <div class="backgroundGrey">
                        @Html.DisplayFor(modelItem => item.Tarif) €
                    </div>

                </div>
            </div>

            <div id="button" class="flex column">
                <input type="button" class="btn-primary center" value="Modifier" onclick="location.href='@Url.Action("Details", "Details", new { id = item.Id })'" />
                @*@Html.ActionLink("Details", "Details", new { id = item.Id })*@
                @if (User.IsInRole("Organisateur"))
                {

                    <input type="button" class="btn-warning center" value="Modifier" onclick="location.href='@Url.Action("Edit", "Edit", new { id = item.Id })'" />
                    <input type="button" class="btn-danger center" value="Supprimer" onclick="location.href='@Url.Action("Delete", "Delete", new { id = item.Id })'" />
                }
            </div>
        </div>
    </div>
    <script type="text/javascript">
        if (navigator.platform.indexOf('Win') != -1) {
            window.document.getElementById("wrapper").setAttribute("class", "windows");
        } else if (navigator.platform.indexOf('Mac') != -1) {
            window.document.getElementById("wrapper").setAttribute("class", "mac");
        }
    </script>
}

@model IEnumerable<ProjetParkingTest2.Models.EvenementViewModel>


@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("Organisateur"))
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }
}


        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ImageEvenement)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Titre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duree)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Theme)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tarif)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateEvenement)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>

                <td>
                    <img src="@Url.Content(item.ImageEvenement.Path)" alt="Image" />
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Titre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duree)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Theme)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tarif)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateEvenement)
                </td>
                @if (User.Identity.IsAuthenticated)
    {

            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                @if (User.IsInRole("Organisateur"))
    {
            @Html.ActionLink("Edit ", "Edit", new { id = item.Id })
            @Html.ActionLink(" Delete", "Delete", new { id = item.Id })
}
            </td>
}

            </tr>
            }

        </table>

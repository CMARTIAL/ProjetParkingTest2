@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li><h1 class="victoryMenu">
    Bonjour
</h1>
            <h1 class="victoryMenu">
        @Html.ActionLink(User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
    </h1>
</li>
        <li><h1 class="victoryMenu"><a href="javascript:document.getElementById('logoutForm').submit()">Se déconnecter</a></h1></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><h1 class="victoryMenu">@Html.ActionLink("S’inscrire", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</h1></li>
        <li><h1 class="victoryMenu">@Html.ActionLink("Se connecter", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</h1></li>
